{
  "extends": ["next", "eslint:recommended", "plugin:react-hooks/recommended", "plugin:react/recommended", "prettier"],
  "plugins": ["@typescript-eslint", "react-hooks", "react", "prettier"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "semi": ["error", "always"],
    "eol-last": ["error", "always"],
    "indent": ["error", 2],
    "quotes": ["error", "double"],
    "react/jsx-indent": ["error", 2],
    "react/jsx-max-props-per-line": [2, { "when": "multiline" }],
    "react-hooks/rules-of-hooks": "error",
    "no-unused-vars": 0,
    "@typescript-eslint/no-unused-vars": "error",
    "react-hooks/exhaustive-deps": "error",
    "prettier/prettier": ["error", { "singleQuote": false, "tabWidth": 2 }]
  }
}
